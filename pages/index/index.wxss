/* 轮播图样式 */
.swiper, swiper {
  height: 180px;
}

.swiper image {
  width: 100%;
  height: 100%;
}

/* 九宫格样式 */
.grids {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-top: 1px solid #eee;
  border-left: 1px solid #eee;
}

.grid-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.333333333333333%;
  height: 250rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
}

.grid-item image {
  width: 60rpx;
  height: 60rpx;
}
.grid-item text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
}

/* 顶部link */
.links {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
}
.links image {
  width: 345rpx;
  height: 94px;
}