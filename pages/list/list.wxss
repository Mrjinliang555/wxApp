/* 列表样式 */
.category-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

/* 图片 */
.category-item image {
  flex: 1;
  width: 187.5rpx;
  height: 187.5rpx;
}

/* 右侧描述文字 */
.category-item .info {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
  flex: 3;
  margin-left: 20rpx;
}

/* 标题 */
.category-item .title {
  font-size: 16px;
  color: #333;
}

/* 文字样式 */
.category-item text {
  font-size: 14px;
  color: #678;
}

/* 红色分数 */
.category-item .score {
  position: absolute;
  right: 0;
  top: 0;
  width: 30px;
  text-align: center;
  border-radius: 10px;
  padding: 2px;
  background-color: #EE523D;
  color: #fff;
}

/* 数据加载中提示 */
.has-more {
  height: 36px;
  line-height: 36px;
  text-align: center;
  font-size: 14px;
  color: #678;
}